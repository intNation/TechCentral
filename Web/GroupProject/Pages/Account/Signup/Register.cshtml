@page
@model RegisterModel
@{ ViewData["Title"] = "Register"; }


<!--SIGN UP PAGE-->

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5">
            <div class="card">
                <div class="card-header">
                    <h4 class="offset-5">Register</h4>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>}
                            <form method="post">
                                <div class="form-group">
                                    <label for="FirstName">First Name</label>
                                    <input asp-for="user.FirstName" class="form-control" required />
                                </div>
                                <div class="form-group">
                                    <label for="LastName">Last Name</label>
                                    <input asp-for="user.LastName" class="form-control" required />
                                </div>
                                <div class="form-group">
                                    <label for="Email">Email</label>
                                    <input asp-for="user.Email" class="form-control" type="email" required />
                                </div>
                                <div class="form-group">
                                    <label for="Phone">Phone</label>
                                    <input asp-for="user.Phone" class="form-control" required />
                                </div>
                                <div class="form-group">
                                    <label for="Password">Password</label>
                                    <input asp-for="user.Password" class="form-control" type="password" required />
                                </div>

                                
                                <button type="submit" class="btn btn-primary btn-block">Register</button> <!--SUBMIT FORM WHEN ALL THE FIELDS ARE PROVIDED-->
                            </form>
                            <div class="mt-3 text-center">
                                Already have an account? <a href="/Account/Login/Login">Log In</a> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>