    .card {
        position: relative;
        overflow: hidden;
    }

    .card-img-top {
        transition: transform 0.6s ease;
    }

    .card:hover .card-img-top {
        transform: scale(1.1);
    }

    .compare-icon {
        display: none; 
        font-size: 2.0rem;
        color: #000;
        position: absolute;
        top: 5px;
        right: 5px;
        transition: transform 0.5s ease;
    }

    .card:hover .compare-icon {
        display: block; 
    }

    .compare-icon:hover {
        font-weight: bold;
        color: #5cb85c;
    }

</style>