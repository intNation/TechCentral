@page
@model CartModel
@{
    ViewData["Title"] = "Cart";
    Layout = Model.Layout;
}

<!--BREAD CRUMBS-->
<nav aria-label="breadcrumb" class="mt-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Index">Home</a></li> <!--REDIRECT TO HOME-->
        <li class="breadcrumb-item active" aria-current="page">Cart</li>
    </ol>
</nav>



<!--USED RAZOR SYNTAX TO SIMPLYFY PROCESS OF DYNAMICALLY POPULATING PRODUCTS-->

<div class="container my-5">
    
    <!--CHECK IF THERE ARE PRODUCTS IN CART-->
    @if (Model.Products != null && Model.Products.Any()) 
    {
        
        <div class="row">    
            <div class="col-md-8">
                <table class="table table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th class="text-right">Price</th>
                            <th class="text-right">Total</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        <!--CREATE A ROW FOR EVERY PRODUCT ADDED TO CART-->
                        @foreach (var item in Model.CartItems)
                        {
                             <!--GET THE PRODUCT THAT MATCHES THE CART ITEM-->
                            var product = Model.Products.FirstOrDefault(p => p.productId == item.ProductId);


                            if (product != null)
                            {
                                 <!--CALCULATE THE ACTUAL PRICE OF PRODUCT BY CHECKING TO SEE IF IT IS ON SALE OR NOT-->
                                var price = product.onSale && product.SalePrice.HasValue ? product.SalePrice.Value : product.Price;
                                var total = price * item.QtyAdded;

                        <tr>
                            <td>
                                <!--NAME & IMAGE-->
                                <div class="media">
                                    <img src="@product.ImageUrl" class="mr-3" style="width: 64px; height: 64px; object-fit: cover;">
                                    <div class="media-body">
                                        <h5 class="mt-0">@product.Name</h5>
                                    </div>
                                </div>
                            </td>

                            <!--QUANTITY-->
                            <td>@item.QtyAdded</td>

                            <!--PRICES-->
                            <td class="text-right">$@price</td>
                            <td class="text-right">$@total</td>

                            <td>

                                <form method="post" asp-page-handler="Remove">
                                    <input type="hidden" name="productId" value="@product.productId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>   <!--SUBMIT FORM USING THIS BUTTON-->
                                </form>
                            </td>
                            </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>


            <!-- CART SUMMARY -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Cart Summary
                    </div>
                    <div class="card-body">
                        <p class="d-flex justify-content-between">
                            <span>Subtotal</span>
                            <span>$@Model.Subtotal</span>
                        </p>
                        <p class="d-flex justify-content-between">
                            <span>Tax (15%)</span>
                            <span>$@Model.Tax</span>
                        </p>
                        <hr />
                        <h5 class="d-flex justify-content-between">
                            <span>Total</span>
                            <span>$@Model.Total</span>
                        </h5>
                        <a href="/Checkout/Checkout" class="btn btn-primary btn-block mt-3">Proceed to Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
         <!--ALERT USER IF CART IS EMPTY-->
        <h1 class="text-center text-capitalize" >Your cart is empty</h1>
    }
</div>